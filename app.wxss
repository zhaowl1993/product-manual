/**app.wxss**/
page {
  --bg-white: #ffffff;
  --green-700: #15803d;
  --green-800: #166534;
  --gray-200: #e5e7eb;
}

.flex {
  display: flex;
}

.flex-col {
  flex-direction: column;
}

.items-center {
  align-items: center;
}

.justify-center {
  justify-content: center;
}

.justify-between {
  justify-content: space-between;
}

.justify-start {
  justify-content: flex-start;
}

.justify-end {
  justify-content: flex-end;
}

.text-center {
  text-align: center;
}

.text-white {
  color: white;
}

.font-medium {
  font-weight: 500;
}

.font-bold {
  font-weight: bold;
}

.gap-1 {
  gap: 4rpx;
}

.gap-2 {
  gap: 8rpx;
}

.mb-2 {
  margin-bottom: 8rpx;
}

.mb-4 {
  margin-bottom: 16rpx;
}

.mb-6 {
  margin-bottom: 24rpx;
}

.py-2 {
  padding-top: 8rpx;
  padding-bottom: 8rpx;
}

.py-3 {
  padding-top: 12rpx;
  padding-bottom: 12rpx;
}

.py-4 {
  padding-top: 16rpx;
  padding-bottom: 16rpx;
}

.py-6 {
  padding-top: 24rpx;
  padding-bottom: 24rpx;
}

.px-2 {
  padding-left: 8rpx;
  padding-right: 8rpx;
}

.px-4 {
  padding-left: 16rpx;
  padding-right: 16rpx;
}

.rounded-full {
  border-radius: 999rpx;
}

.border {
  border: 1rpx solid #e5e7eb;
}

.border-t {
  border-top: 1rpx solid #e5e7eb;
}

.whitespace-pre-line {
  white-space: pre-line;
}

.leading-relaxed {
  line-height: 1.625;
}

.text-lg {
  font-size: 18px;
}

.text-base {
  font-size: 16px;
}

.text-xl {
  font-size: 20px;
}

.text-2xl {
  font-size: 24px;
}

.opacity-70 {
  opacity: 0.7;
}

.bg-white {
  background-color: var(--bg-white);
}

.bg-green-700 {
  background-color: var(--green-700);
}

.bg-green-800 {
  background-color: var(--green-800);
}

.bg-gray-200 {
  background-color: var(--gray-200);
}

.bg-black {
  background-color: #000000;
}

.block {
  display: block;
} 